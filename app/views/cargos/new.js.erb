 $("#cargo_modal").html("<%= escape_javascript(render partial: 'form_modal') %>");
 $('#novo_cargo').modal('show');
 $(function() {
  $('#add_cargo').on("click", function() {
    return $('#submit_cargo').click();
  });
  return $('#new_cargo').bind("ajax:success", function(event, data, status, xhr) {
    $('#funcionario_cargo').append($("<option/>").attr("value", data.id).text(data.descricao).attr("selected", "selected"));
    return $('#novo_cargo').modal('hide');
  });
});
