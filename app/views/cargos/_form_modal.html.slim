div class="modal fade" id="novo_cargo" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"
  div class="modal-dialog"
    div class="modal-content"
      div class="modal-header"
        button type="button" class="close" data-dismiss="modal" aria-label="Close"
            span aria-hidden="true" &times
        h2 class="modal-title" id="myModalLabel"
            'Novo Cargo
      div class="modal-body"

        = form_for @cargo, remote: true, format: 'json' do |f|

          .form-group
            = f.label 'Descrição*'
            = f.text_field :descricao, class: 'form-control input-sm', required: true

      div class="modal-footer"
        button type="button" class="btn btn-default" data-dismiss="modal"
            'Fechar
        = link_to 'Salvar', '#', class: "btn btn-success", id: 'add_cargo'