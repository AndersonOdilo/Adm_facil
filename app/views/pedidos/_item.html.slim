tr class="item"
    td
        = item.produto.cod
        = hidden_field_tag 'pedido[itens_pedidos_attributes][][produto_id]', item.produto_id
    td
        = item.produto.nome
    td
        = number_to_currency(item.preco, unit: 'R$', separator: ",", delimiter: ".")
        = hidden_field_tag 'pedido[itens_pedidos_attributes][][preco]', item.preco
    td
        = item.quantidade
        = hidden_field_tag 'pedido[itens_pedidos_attributes][][quantidade]', item.quantidade
    td
        = item.produto.unidade.sigla
    td
        = number_to_currency(item.preco_total, unit: 'R$', separator: ",", delimiter: ".")
    td
        a href='#' onclick="window.remover_item_venda(this, #{item.produto_id}, #{item.quantidade})"
