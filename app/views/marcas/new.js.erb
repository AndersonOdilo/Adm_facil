 $("#marca_modal").html("<%= escape_javascript(render partial: 'form_modal') %>");
 $('#nova_marca').modal('show');
 $(function() {
  $('#add_marca').on("click", function() {
    return $('#new_marca').submit();
  });
  return $('#new_marca').bind("ajax:success", function(event, data, status, xhr) {
    $('#produto_marca').append($("<option/>").attr("value", data.id).text(data.nome).attr("selected", "selected"));
    $('#nova_marca').modal('hide');
    return $('#new_marca')[0].reset();
  });
});

