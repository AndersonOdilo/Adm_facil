div class="panel panel-default"
    div class="panel-heading"
        h2
            'Venda #{@venda.id}
    div class="panel-body"
        h3
            =@venda.cliente.pessoa.nome
        .row
          .col-xs-4
            strong Funcionario: </strong>
            = @venda.funcionario.pessoa.specific.nome
          .col-xs-3
            strong fone: </strong>
            = @venda.funcionario.pessoa.fones.first.numero rescue ''
          .col-xs-4
            strong e-mail: </strong>
            = @venda.funcionario.pessoa.emails.first.descricao rescue ''

        .row
          .col-xs-4
            strong Data emissao: </strog>
            = @venda.data
          .col-xs-4
            strong Forma pagamento: </strog>
            = @venda.forma_pagamento.descricao

        br
        div class="panel panel-default"
            div class="panel-body"
              h4
                'Itens Pedido
              #itens_pedido
                table class="table table-striped"
                  thead
                    tr
                      th Cod.
                      th Nome
                      th Valor Unid.
                      th Quant.
                      th Unid.
                      th Valor Total
                  tbody id="itens"
                  - @venda.itens_pedidos.each do |item|
                    tr
                        td = item.produto.cod
                        td ="#{item.produto.nome}, #{item.produto.marca.nome}"
                        td = number_to_currency(item.preco, unit: 'R$', separator: ",", delimiter: ".")
                        td = item.quantidade
                        td = item.produto.unidade.sigla
                        td = item.preco_total
            div class="panel-footer"
              .row
                - if @venda.desconto
                    .col-xs-3
                        h4
                            = "Desconto: #{number_to_percentage(@venda.desconto, precision: 0)}"
                    .col-xs-4
                        h4
                            ="Total desc.  #{(number_to_currency(@venda.total_desconto, unit: 'R$', separator: ",", delimiter: "."))}"
                    .col-xs-1
                - else
                    .col-xs-9
                .col-xs-1
                  h4 Total
                .col-xs-2
                  h4
                    = (number_to_currency(@venda.total, unit: 'R$', separator: ",", delimiter: "."))

        .row
          .col-lg-6
            div class="panel panel-default"
                div class="panel-body"
                  h4
                    'Pagamentos
                  table class="table table-striped"
                    thead
                      tr
                        th NÂ°.
                        th Data vencimento
                        th Data pagamento
                        th Valor
                    tbody id="itens"
                      - @venda.pagamentos_vendas.each do |pagamento|
                        - if pagamento.data_pagamento != nil
                          - classe = "success"
                        - elsif pagamento.data_vencimento < Date.today
                          -classe ="warning"
                        - else
                          - classe ="info"

                        tr class="#{classe}"
                          td = pagamento.id
                          td = pagamento.data_vencimento
                          td = pagamento.data_pagamento
                          td = pagamento.preco

          .col-lg-4
            div class="panel panel-default"
                div class="panel-body"
                  h4
                    'Observacoes
                  p
                    = @venda.obs

