= nested_form_for @pessoa_fisica, remote: true, format: 'json', html: {id: 'new_pessoa_fisica'} do |f|
  - if @pessoa_fisica.errors.any?
    #error_explanation
      h2 = "#{pluralize(@pessoa_fisica.errors.count, "error")} prohibited this pessoa_fisica from being saved:"
      ul
        - @pessoa_fisica.errors.full_messages.each do |message|
          li = message

  .form-group
    = f.label :nome
    = f.text_field :nome, class: 'form-control'
  .form-group
    = f.label :cpf
    = f.text_field :cpf, class: 'form-control'
  .form-group
    = f.label :rg
    = f.text_field :rg, class: 'form-control'
  .form-group
    = f.label :data_nascimento
    = f.date_select :data_nascimento
  = f.fields_for :pessoa do |p|
    = p.hidden_field :id
    .form-group
      = p.label :fones
      = p.fields_for :fones
      = p.link_to_add 'Novo fone', :fones
    .form-group
      = p.label :emails
      = p.fields_for :emails
      = p.link_to_add 'Novo e-mail', :emails
    .form-group
      = p.label :enderecos
      = p.fields_for :enderecos
      = p.link_to_add 'Novo endere√ßo', :enderecos