= nested_form_for @pessoa_fisica, remote: true, format: 'json', html: {id: 'new_pessoa_fisica'} do |f|
  - if @pessoa_fisica.errors.any?
    #error_explanation
      h2 = "#{pluralize(@pessoa_fisica.errors.count, "error")} prohibited this pessoa_fisica from being saved:"
      ul
        - @pessoa_fisica.errors.full_messages.each do |message|
          li = message

  .form-group
    = f.label :nome
    = f.text_field :nome, class: 'form-control input-sm'
  .form-group
    = f.label :cpf
    = f.text_field :cpf, class: 'form-control input-sm'
  .form-group
    = f.label :rg
    = f.text_field :rg, class: 'form-control input-sm'
  .form-group
    = f.label :data_nascimento
    = f.date_select :data_nascimento

  = f.fields_for :pessoa do |p|
    = p.hidden_field :id
    .form-group
      = p.label :fones
      = p.fields_for :fones do |fone|
        .form-group
          = fone.text_field :numero, class: 'form-control input-sm'
          = fone.link_to_remove 'Excluir'
      = p.link_to_add 'Novo fone', :fones, class: "btn btn-primary btn-xs"
    .form-group
      = p.label :emails
      = p.fields_for :emails do |email|
        .form-group
         = email.text_field :descricao, class: 'form-control input-sm'
         = email.link_to_remove 'Excluir'
      = p.link_to_add 'Novo e-mail', :emails, class: "btn btn-primary btn-xs"
    .form-group
      = p.label :enderecos
      = p.fields_for :enderecos do |endereco|
        .form-group
          = label_tag 'Pais'
          = select_tag :select_pais, options_from_collection_for_select(Pais.all, :id, :sigla), class: 'form-control input-sm'
        .form-group
          = label_tag 'Estado'
          = select_tag :select_estado, options_from_collection_for_select(Pais.first.estados, :id, :sigla), prompt: 'Selecione um estados', class: 'form-control input-sm'
        .form-group
          = label_tag 'Cidade'
          = select_tag :select_cidade, {}, {class: 'form-control input-sm'}
        .form-group
          = label_tag 'Bairro'
          = select_tag :select_bairro, {}, {class: 'form-control input-sm'}
        .form-group
          = endereco.label :rua
          = endereco.collection_select :rua, Logradouro.all, :id, :nome, {}, {class: 'form-control input-sm'}
        .form-group
          = f.label :numero
          = endereco.number_field :numero, class: 'form-control input-sm'
        .form-group
          = endereco.label :complemento
          = endereco.text_field :complemento, class: 'form-control input-sm'
          = endereco.link_to_remove "Excluir"
      = p.link_to_add 'Novo endere√ßo', :enderecos, class: "btn btn-primary btn-xs"

<script src='/assets/enderecos.js'></script>
<script src='/assets/pessoas_fisicas.js'></script>