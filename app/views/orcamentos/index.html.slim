.page-header
  .row
    .col-lg-8
      h1 Orçamentos
    .col-lg-4
      br
      = link_to 'Novo Orçamento', new_orcamento_path, class: 'btn btn-primary right'


table id="tabela" class="table table-striped table-bordered" cellspacing="0" width="100%"
  thead
    tr
      th Cliente
      th Data emissão
      th Data validade
      th Total
      th Observação
      th

  tbody
    - @orcamentos.each do |orcamento|
      tr
        td = orcamento.cliente.pessoa.specific.nome rescue ""
        td = orcamento.data
        td = orcamento.data_validade
        td = number_to_currency(orcamento.total, unit: 'R$', separator: ",", delimiter: ".")
        td = orcamento.obs
        td 
          .btn-group
            = link_to 'Abrir', orcamento, class: 'btn btn-primary btn-xs'
            = link_to 'Excluir', orcamento, class: 'btn btn-danger btn-xs', data: {:confirm => 'Are you sure?'}, :method => :delete
