$("#categoria_modal").html("<%= escape_javascript(render partial: 'form_modal') %>");
$('#nova_categoria').modal('show');
$(function() {
  $('#add_categoria').on("click", function() {
    return $('#new_categoria_produto').submit();
  });
  return $('#new_categoria_produto').bind("ajax:success", function(event, data, status, xhr) {
    $('#produto_categoria_produto').append($("<option/>").attr("value", data.id).text(data.descricao).attr("selected", "selected"));
    $('#nova_categoria').modal('hide');
    return $('#new_categoria_produto')[0].reset();
  });
});

